<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<!--Write an Android app containing an EditText, a -->
    <!--"Download" button and a -->
    <!--TextView below which occupies the rest of the Activity.-->
    <EditText
        android:gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/artist"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        android:textSize="8pt"
        android:hint="@string/artistPrompt"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/getSongs"
        android:id="@+id/btnGetSongs" />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">

    <TextView
        android:gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:id="@+id/songList" />

    </ScrollView>

</LinearLayout>